<h1><%= @topic.title %></h1>

<%= button_to "Delete topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>

<div class="row">
  <div class="col-md-8">
    <% @bookmarks.each do |bookmark| %>
      <div class="bookmark-holder">
        <div class="space-maker"></div>
        <h5 class="text-center"><%= bookmark.url %></h5>
      </div>
    <% end %>
  </div>
</div>
