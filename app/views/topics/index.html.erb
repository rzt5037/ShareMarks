<h1>
  Topics
  <%= link_to "", new_topic_path, class: 'glyphicon glyphicon-plus-sign text-success' %>
</h1>

<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
      <div>
        <h3>
          <%= link_to "", topic_path(topic), method: :delete, class: 'glyphicon glyphicon-remove-sign text-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>
          <%= link_to topic.title, topic %>
        </h3>
        <% @bookmarks.each do |bookmark| %>
          <% if bookmark.topic_id == topic.id %>
            <div class="bookmark-holder">
              <div class="space-maker"></div>
              <h5 class="text-center"><%= bookmark.url %></h5>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
